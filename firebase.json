{
  "hosting": {
    "public": "build/web",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "emulators": {
    "ui": {
      "enabled": true,
      "port": 4005,
      "host": "127.0.0.1"
    },
    "auth": {
      "port": 9200,
      "host": "127.0.0.1"
    },
    "firestore": {
      "port": 8200,
      "host": "127.0.0.1"
    },
    "singleProjectMode": true
  }
}
