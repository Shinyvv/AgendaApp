rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Reglas para la colección de usuarios
    match /users/{userId} {
      // Permitir CREAR documento si el usuario está autenticado y el documento es para su propio UID
      allow create: if request.auth != null && request.auth.uid == userId;
      
      // Permitir leer su propio documento
      allow read, update: if request.auth != null && request.auth.uid == userId;
      
      // Permitir a usuarios autenticados leer información básica de otros usuarios (para dashboard)
      // pero solo campos públicos necesarios para mostrar trabajadores disponibles
      allow read: if request.auth != null && 
                     request.auth.uid != userId && 
                     resource.data.isActive == true;
      
      // Prohibir DELETE por seguridad
      allow delete: if false;
    }
    
    // Reglas para otras colecciones (futuro)
    match /appointments/{document} {
      allow read, write: if request.auth != null;
    }
    
    // Denegar acceso a todo lo demás
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
